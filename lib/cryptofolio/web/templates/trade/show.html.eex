<h2><%= name_with_symbol(@trade.currency) %></h2>

<div>
  <strong>
    <%= format_money(@trade.current_value, @fiat) %>
  </strong>
</div>

<div>
  <div>
    <strong>Amount:</strong>
    <%= @trade.amount %>
  </div>

  <div>
    <strong>Cost:</strong>
    <td><%= format_money(@trade.cost, @fiat) %></td>
  </div>

  <div>
    <strong>Date:</strong>
    <%= @trade.date %>
  </div>

  <div>
    <strong>Description:</strong>
    <%= @trade.description %>
  </div>
</div>

<div>
  <span><%= link "Edit", to: portfolio_trade_path(@conn, :edit, @trade.portfolio, @trade), class: "button" %></span>
  <span><%= link "Back", to: portfolio_path(@conn, :show, @trade.portfolio.id), class: "button" %></span>
  <span><%= link "Delete", to: portfolio_trade_path(@conn, :delete, @trade.portfolio, @trade), method: "delete", class: "button button--danger" %></span>
</div>
