<h2>Listing Trades</h2>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Currency</th>
      <th>Cost</th>
      <th>Date</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
  <%= for trade <- @trades do %>
    <tr>
      <td><%= trade.amount %></td>
      <td><%= trade.currency %></td>
      <td><%= trade.cost %></td>
      <td><%= trade.date %></td>

      <td class="text-right">
        <span><%= link "Edit", to: trade_path(@conn, :edit, trade), class: "button" %></span>
        <span><%= link "Delete", to: trade_path(@conn, :delete, trade), method: :delete, data: [confirm: "Are you sure?"], class: "button button--danger" %></span>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<span><%= link "New Trade", to: trade_path(@conn, :new) %></span>
